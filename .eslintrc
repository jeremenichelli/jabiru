{
  // http://eslint.org/docs/rules/

  "env": {
    "browser": true
  },

  "globals": {
    "window": true,
    "document": true,
    "module": true,
    "define": true,
    "undefined": true,
    // project global name
    "jabiru": true,
    // jasmine reserved names
    "describe": true,
    "beforeEach": true,
    "afterEach": true,
    "expect": true,
    "spyOn": true,
    "it": true
  },

  "rules": {
    "comma-dangle": 2,
    "no-cond-assign": 2,
    "no-console": 0,
    "no-constant-condition": 2,
    "no-dupe-keys": 0,
    "no-empty": 2,
    "no-extra-parens": 2,
    "no-extra-semi": 2,
    "no-func-assign": 2,
    "no-inner-declarations": 2,
    "no-invalid-regexp": 2,
    "no-irregular-whitespace": 2,
    "no-negated-in-lhs": 2,
    "no-obj-calls": 2,
    "no-regex-spaces": 2,
    "quote-props": [2, "as-needed"],
    "no-sparse-arrays": 2,
    "no-unreachable": 2,
    "use-isnan": 2,
    "valid-jsdoc": [2, {
            "requireParamDescription": false,
            "requireReturnDescription": false
        }],
    "valid-typeof": 2,
    "no-shadow-restricted-names": 0,


    ////////// Best Practices //////////

    "block-scoped-var": 2,
    "complexity": 2,
    "consistent-return": 2,
    "curly": 2,
    "default-case": 2,
    "dot-notation": 2,
    "eqeqeq": 2,
    "guard-for-in": 2,
    "no-alert": 2,
    "no-caller": 2,
    "no-div-regex": 2,
    "no-else-return": 2,
    "no-empty-label": 2,
    "no-eq-null": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-bind": 2,
    "no-fallthrough": 2,
    "no-floating-decimal": 2,
    "no-implied-eval": 2,
    "no-iterator": 2,
    "no-labels": 2,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-multi-spaces": 2,
    "no-multi-str": 2,
    "no-native-reassign": 2,
    "no-new": 2,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-octal": 2,
    "no-octal-escape": 2,
    "no-process-env": 2,
    "no-redeclare": 2,
    "no-return-assign": 2,
    "no-script-url": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-unused-expressions": 2,
    "no-void": 2,
    "no-warning-comments": 2,
    "no-with": 2,
    "radix": 2,
    "wrap-iife": [2, "inside"],


    ////////// Strict Mode //////////

    "strict": [2, "function"],


    ////////// Variables //////////

    "no-catch-shadow": 2,
    "no-delete-var": 2,
    "no-label-var": 2,
    "no-undef": 2,
    "no-undef-init": 2,
    "no-unused-vars": 2,
    "no-use-before-define": 0,

    ////////// Stylistic Issues //////////

    "array-bracket-spacing": [2, "always"],
    "brace-style": 2,
    "block-spacing": [2, "always"],
    "camelcase": 2,
    "comma-spacing": 2,
    "comma-style": 2,
    "consistent-this": 2,
    "eol-last": 2,
    "func-style": 2,
    "key-spacing": 2,
    "max-nested-callbacks": 2,
    "new-cap": 2,
    "new-parens": 2,
    "no-array-constructor": 2,
    "no-inline-comments": 2,
    "no-lonely-if": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-multiple-empty-lines": 2,
    "no-nested-ternary": 2,
    "no-new-object": 2,
    "semi-spacing": 2,
    "no-spaced-func": 2,
    "no-trailing-spaces": 2,
    "no-underscore-dangle": 0,
    "no-extra-parens": 2,
    "object-curly-spacing": [2, "always"],
    "one-var": 0,
    "operator-assignment": 2,
    "quotes": [2, "single"],
    "semi": 2,
    "space-before-function-paren": 0,
    "space-after-keywords": 2,
    "space-before-blocks": 2,
    "space-in-parens": [2, "never"],
    "space-infix-ops": 2,
    "space-return-throw-case": 2,
    "space-unary-ops": 2,
    "spaced-comment": 2,
    "wrap-regex": 2,

    "max-len": [2, 120, 2]
  }
}